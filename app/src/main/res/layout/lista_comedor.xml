<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textno"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="1"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/textrut"
                android:layout_width="100dp"
                android:text="1234"
                android:textSize="20dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/textno"
                />

            <TextView
                android:id="@+id/textonombrec"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/textrut"
                android:text="Gerandina Hernandez"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textomenu"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_toEndOf="@+id/textonombrec"
                android:text="Almuerzo"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/texthora"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_marginStart="48dp"
                android:layout_toEndOf="@+id/textomenu"
                android:text="7:00"
                android:textSize="20dp"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/textempresa"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginStart="77dp"
                android:layout_toEndOf="@+id/texthora"
                android:text="Estudio Ingenieria"
                android:layout_marginTop="30dp"
                android:textSize="20dp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>